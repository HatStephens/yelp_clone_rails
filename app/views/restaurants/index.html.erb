<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
		<h2><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></h2>
	<ul>
		<li><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></li>
		<li><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></li>

	</ul>
		<% end %>
	<% else %>
		"No restaurants"
	<% end %>
		 	

<a href='restaurants/new'>Add a restaurant</a>

